{
  "name": "ngx-text-editor-showcase",
  "version": "20.0.0",
  "description": "Showcase application for ngx-text-editor",
  "author": "Santiago Comeras Oteo <SCO Techlab>",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4300 --watch",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "build-library": "ng build ngx-text-editor && cp README.md dist/ngx-text-editor && cp .npmrc dist/ngx-text-editor",
    "watch-library": "ng build ngx-text-editor --watch",
    "publish-library": "npm run build-library && npm publish ./dist/ngx-text-editor",
    "format": "prettier --write \"**/*.{js,mjs,ts,mts,d.ts,html}\" --cache",
    "test": "ng test"
  },
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "rxjs": "^7.8.0",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.0.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  }
}
